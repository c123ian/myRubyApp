<p id="notice"><%= notice %></p>
 <!--Search form for customers - submit search term -->
<%= form_tag(items_path, :method => "get", id: "search-form") do%>
<%= text_field_tag :search, params[:search], placeholder: "Search For Items" %>
<%= submit_tag "Search" %>
<% end %>

<h1 class="catalogheading">Hanover Harps Store</h1>
<hr />
<br>
<table class="catalog">

<% @items.each do |item| %>
  <tr>
    <td>
      <div class="image">
        <%= link_to (image_tag item.image_url, :style => "height:100px") ,item %>
      </div>
    </td>
    <td>
      <div class="title">
        <%= link_to item.title, item %>
        <hr />
      </div>
      <div class="description">
        <%= item.description %>
      </div>
      <div class="price">
        <%= number_to_currency(item.price, :unit => "â‚¬") %>
      </div>
      <div class="links">
        <%= link_to 'Edit', edit_item_path(item) %> |
        <%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %>
      </div>
      <br >
    </td>
  </tr>
<% end %>
</table>

<br>

<hr />
